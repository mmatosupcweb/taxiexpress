<%= simple_form_for @reservation, :html => { :class => 'form-horizontal form-group' } do |f| %>
  <%= f.input :user_id, :placeholder=>'Nombres y apellidos',  label:'Nombres y Apellidos', input_html: { class:'form-control' } %>
  <%= error_span(@reservation[:user_id]) %>
  <%= f.input :source_addres, :placeholder=>'Origen', label:'Origen', input_html: { class:'form-control' } %>
  <%= error_span(@reservation[:source_addres]) %>
  <%= f.input :final_addres, :placeholder=>'Destino', label:'Destino', input_html: { class:'form-control' } %>
  <%= error_span(@reservation[:final_addres]) %>
  
  
  <%= f.label :documenttypes_id %>
  <%= select_tag(:documenttypes_id, options_for_select(@documenttypes_options), :include_blank=> true , :class => "form-control"  ) %>


  <%= f.button :submit, :class => 'btn-primary', :value => 'Reservar'%>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>
