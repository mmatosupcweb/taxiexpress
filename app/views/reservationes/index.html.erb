<p id="notice"><%= notice %></p>

<h1>Listing Reservationes</h1>

<table>
  <thead>
    <tr>
      <th>Source address</th>
      <th>Final address</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservationes.each do |reservation| %>
      <tr>
        <td><%= reservation.source_address %></td>
        <td><%= reservation.final_address %></td>
        <td><%= reservation.User %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

