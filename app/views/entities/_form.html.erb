<%= simple_form_for @entity, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :Description %>
  <%= error_span(@entity[:Description]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                entities_path, :class => 'btn btn-default' %>
<% end %>
